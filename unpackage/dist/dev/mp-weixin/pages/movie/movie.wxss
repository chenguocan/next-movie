/*视频播放*/
.movie{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-color: balck;
}
.movieItem{
	width: 100%;
	height: 440rpx;
}
/*电影信息*/
.movieDetail{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding:20rpx;
	background-color: #f7f4f8;
}
.movieDetail .movieCover{
	height: 400rpx;
	width: 300rpx;
}
.movieInfo{
	width: 400rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 15rpx;
}
.movieInfo>.movieName{
	font-size: 20px;
}
.movieInfo>.basicInfo{
	font-size: 16px;
	color:darkgray;
}
.movieInfo>.scoreDetail{
	width: 350rpx;
	height: 130rpx;
	background-color: white;
	color:darkgray;
}
.scoreDetail{
	margin-top: 30rpx;
	padding: 20rpx;
	box-shadow:2px 2px 10px  #e7e5e6;
}
.scoreDetail .scoreTitle{
	font-size: 14px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.scoreDetail .scoreInfo{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.scoreDetail .scoreInfo .score{
	color:#ffc233;
	font-weight: bold;
	font-size: 22px;
	margin-right: 40rpx;
}
/*剧情简介*/
.plot,.actorList,.stage{
	padding:0 20rpx 20rpx 20rpx;
	background-color: #f7f4f8;
}
.title{
	color:darkgray;
}
/*演职人员*/
.movieGroup{
	margin-top:10rpx;
}
.movieGroup .photoItem .photo,.stagePhoto{
	height: 300rpx;
	width: 200rpx;
	margin-right: 20rpx;
}
.movieGroup .photoList,.stageList{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.movieGroup .photoList .actName{
	width: 200rpx;
	text-align: center;
	color:darkgray;
}
.movieGroup .photoList .name{
	width: 200rpx;
	color:darkgray;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

