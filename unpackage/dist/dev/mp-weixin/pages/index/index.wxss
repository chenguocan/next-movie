/*轮播图*/
.carouselSwiper{
	width: 100%;
	height: 440rpx;
}
.carouselSwiper swiper-item{
	width: 100%;
	height: 100%;
}
.carouselSwiper swiper-item image{
	width: 100%;
}
/*超英预告*/
.main{
	margin:0 12rpx;
}
.main .hotSuperHeroScroll .hotSuperHeroList{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.hotSuperHeroItem image{
	width: 250rpx;
	height: 250rpx;
}
.hotSuperHeroItem{
	margin-right: 16rpx;
}
.movieName{
	width: 250rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/*热门预告*/
.trailerList{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.trailerList .trailerItem{
	margin-top: 12rpx;
}
.trailerList .trailerItem video{
	height: 220rpx;
	width: 350rpx;
}
/*猜你喜欢*/
.likeList .likeItem{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.likeItem{
	width: 100%;
	margin-bottom: 20rpx;
}
.likeItem  image{
	width: 250rpx;
	height: 270rpx;
	border-radius: 10rpx;
}
.likeItem .moviePoster{
	margin-right: 20rpx;
}
.movieDetail,.movieTime{
	font-size: 14px;
	color:#808080;
}
.movieDesc{
	width: 400rpx;
	margin-right: 15rpx;
}
.praiseMovie{
	border-left:2px dashed #808080; 
	width: 250rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.praiseMe image{
	width: 50rpx;
	height: 50rpx;
}
.praiseText{
	font-size: 16px;
	color:#ffc634;
}
.praiseAdd{
	opacity: 0;
	color:#ffc634;
}

